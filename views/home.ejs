<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <h1 id="page-heading">
        <i class="fa-solid fa-address-book"></i>
        Contact List
    </h1>

    <div id="add-new-contact">
        <form action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Enter Name">
            <input type="number" name="phone" placeholder="Enter Phone No.">

            <button type="submit" class="submit-button">ADD</button>
        </form>
    </div>

    <div class="contact-list-container">
        <ul>
            <% for(let contact of contact_list) { %>
            <li class="contact">
                <div class="details">
                    <p><%= contact.name %></p>
                    <p><%= contact.phone %></p>
                </div>
                <div class="delete-button">
                    <!-- <a href="/delete-contact/<%= contact.phone %>"> -->
                    <a href="/delete-contact/?id=<%= contact._id %>">
                        <i class="fas fa-window-close"></i>
                    </a>
                </div>
            </li>
                
            <% } %>
        </ul>
    </div>

    <script type="text/javascript" src="/js/home.js"></script>
</body>
</html>